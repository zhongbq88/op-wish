                    <!-- Carousel items -->
                    <div class="carousel-inner">
                      <div class="active item">
                        <div class="product-grid">
                          <div class="row"> {% if products %}
                            {% for product in products %}
                            <div class="col-sm-2 col-xs-6 col-md-25 col-lg-2 col-sm-3  "> 
                              
                              <!-- Product -->
                              <div class="product clearfix product-hover">
                                <div class="left"> 
                                  <!--<div class="new">New</div>-->
                                  <div class="image "> <a href="{{ product.href }}"> <img src="{{ product.thumb }}" alt="{{ product.name }}" class="" /> </a> </div>
                                </div>
                                <div class="right">
                                  <div class="name" style="height:60px;"><a href="{{product.href}}" style="overflow:hidden;text-overflow: ellipsis;
display: -webkit-box;-webkit-line-clamp: 2;-webkit-box-orient: vertical;">{{ product.name }}</a></div>
                                  <div class="price"> {{product.price}} </div>
                                  <div class="only-hover">
                                    <ul>
                                    {%if home %}
                                    <li style="width:100%;"><a onclick="cart.add('{{ product.product_id }}');" style="width:100%;" data-toggle="tooltip" data-original-title="{{ button_cart }}">{{ button_cart }}</a></li>
                                    {% else %}
                                    {% if product.added %}
                                     <li style="width:100%;"><a onclick="wishlist.add('{{ product.product_id }}');" style="width:100%;" data-toggle="tooltip" id="button_add_wishlist{{ product.product_id }}" data-original-title="{{ button_wishlist }}"><i class="fa fa-check-circle"></i> Added</a></li>	
                                      {% else %}
                                    <li style="width:100%;"><a onclick="wishlist.add('{{ product.product_id }}');" style="width:100%;" data-toggle="tooltip" id="button_add_wishlist{{ product.product_id }}" data-original-title="{{ button_wishlist }}">{{ button_wishlist }}</a></li>									{% endif %}
                                    {% endif %}
                                      
                                    </ul>
                                  </div>
                                </div>
                              </div>
                            </div>
                            {% endfor %}
                            {% endif %} </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
