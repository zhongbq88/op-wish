{% if products %}
{% for product in products %}
<tr>
  <td class="text-center"><img src="{{ product.image }}" style="width:100px; height:auto;" alt="{{ product.name }}" class="img-thumbnail" /></td>
  <td class="text-center">{{ product.title }}</td>
  <td class="text-center">{{ product.status }}</td>
  <td class="text-center">{{ product.sales }}</td>
  <td class="text-center">{{ product.published_at }}</td>
  <td class="text-center"><div style="float:right">
      <div class="btn-group" style="float:left;">
        <button type="button" onClick="payclick('{{order.pay}}');" id="pay{{order.order_id}}"   class="btn btn-success btn-xs" > {{ add_product }}</button>
      </div>
      <div class="btn-group"  style="float:left; margin-left:20px;"> <a href="{{ product.view }}" data-toggle="tooltip" title="{{ button_view }}" class="btn btn-primary"><i class="fa fa-eye"></i>{{ button_view }}</a> </div>
    </div></td>
</tr>
{% endfor %}
{% else %}
<tr>
  <td class="text-center" colspan="8">{{ text_no_results }}</td>
</tr>
{% endif %}